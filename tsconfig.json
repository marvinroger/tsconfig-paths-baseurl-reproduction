{
    "compilerOptions": {
      // We target Node 16
      // see https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
      "module": "commonjs",
      "target": "ES2021",
      "lib": ["ES2021"],
  
      "strict": true,
  
      // "baseUrl": ".",
      "paths": {
        "~/*": ["src/*"]
      },
  
      "types": ["node"]
    },
    "include": ["./src/**/*"]
  }
  